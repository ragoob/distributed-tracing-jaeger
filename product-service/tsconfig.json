{
  "compilerOptions": {
    "outDir": "./dist",
    "rootDirs": [
      "./src",
      "./test"
    ],
    "target": "ES2020",                               
    "module": "commonjs",
    "lib": [
      "ES2020"
    ],
    "types": [
      "node"
    ],                             
    "esModuleInterop": true,                            
    "forceConsistentCasingInFileNames": true,           
    "strict": true,                                      
    "skipLibCheck": true,                          
    "baseUrl": "./src",
    "paths": {
      "@core/*": ["core/*"],
      "@infrastructure/*": ["infrastructure/*"],
      "@presentation/*": ["presentation/*"],
      "@utils/*": ["utils/*"],
      "@test/*": ["test/*"]
    }
  },
  "include": [
    "./src/**/*.ts",
    "./test/**/*.ts"
  ]
}
